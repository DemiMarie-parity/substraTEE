pipeline {
    agent none
    parameters {
        string(
            name: 'substrate_api_client_revision',
            defaultValue: 'HEAD',
            description: 'Revision or branch of substrate-api-client to use. Prepend b_ for branch name'
        )
    }
    options {
        timeout(time: 2, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '5'))
        timestamps()
    }
    stages {
        stage('Outside Docker') {
            agent {
                label 'linux'
            }
            steps {
                sh 'ls -la'
                echo sh(returnStdout: true, script: 'env')
            }
        }
        stage('Inside Docker') {
            agent {
                docker { image 'repository.scs-ad.scs.ch/substratee-docker-dev-local/substratee_generic:latest' }
            }
            steps {
                echo sh(returnStdout: true, script: 'env')

                script {
                    sh 'git clone https://github.com/scs/substratee-node substratee-node'
                    sh 'git clone https://github.com/scs/substratee-worker substratee-worker'

                    if ( params.substrate_api_client_revision == "HEAD" ) {
                        echo "don't change dependencies on substrate_api_client"
                    } else {
                        if ( params.substrate_api_client_revision.contains("b_")) {
                            echo "change dependencies on substrate_api_client to branch ${params.substrate_api_client_revision}"
                        } else {
                            echo "change dependencies on substrate_api_client to revision ${params.substrate_api_client_revision}"
                        }
                    }
                }
                sh 'ls -la'
            }
        }
    }
}