pipeline {
    agent none
    parameters {
        string(
            name: 'PERSON',
            defaultValue: 'Mr. Jenkins',
            description: 'Who should I say hello to?'
        )
        string(
            name: 'substrate_api_client_revision',
            description: 'Revision of substrate-api-client to use'
        )
    }
    options {
        timeout(time: 2, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '5'))
        timestamps()
    }
    stages {
        stage('Outside Docker') {
            agent {
                label 'linux'
            }
            steps {
                echo "Hello ${params.PERSON}"
                sh 'ls -la'
                echo sh(returnStdout: true, script: 'env')
            }
        }
        stage('Inside Docker with default parameter') {
            when {
                expression { params.substrate_api_client_revision == "" }
            }
            agent {
                docker { image 'repository.scs-ad.scs.ch/substratee-docker-dev-local/substratee_generic:latest' }
            }
            steps {
                echo "parameter substrate_api_client == GIT_BRANCH"
                echo "Hello ${params.PERSON}"
                sh 'ls -la'
                echo sh(returnStdout: true, script: 'env')
            }
        }
        stage('Inside Docker with set parameter') {
            when {
                expression { params.substrate_api_client_revision != GIT_BRANCH }
            }
            agent {
                docker { image 'repository.scs-ad.scs.ch/substratee-docker-dev-local/substratee_generic:latest' }
            }
            steps {
                echo "parameter substrate_api_client == GIT_BRANCH"
                echo "Hello ${params.PERSON}"
                sh 'ls -la'
                echo sh(returnStdout: true, script: 'env')
            }
        }
    }
}